{{#each erros}}
    <div class="alert alert-danger mt-4">{{texto}}</div>
    {{else}}
{{/each}}
<div class="card mt-4 shadow">
    <div class="card-header">
        <h2 class="text-center">Cadastrar Postagem</h2>
    </div>
    <div class="card-body">
        <form action="/admin/postagens/add" method="POST" enctype="multipart/form-data">
            <label for="nome">Título: </label>
            <input class="form-control" type="text" id="titulo" name="titulo" placeholder="Título da postagem">
            <br>
            <label for="nome">Descrição: </label>
            <input class="form-control" type="text" id="descricao" name="descricao" placeholder="Descrição da postagem">
            <br>
            <label for="categorias">Categoria: </label>
            <select class="form-control" name="categoria">
                <option selected disabled value="0">Escolha uma categoria</option>
            {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
            {{/each}}
            </select>
            <br>
             <label for="slug">Slug: </label>
            <input class="form-control" type="text" id="slug" name="slug" placeholder="Slug da postagem">
            <br>
            <label for="conteudo">Conteudo: </label>
            <textarea class="form-control" id="descricao" name="conteudo" placeholder="Descrição da postagem" rows="5"></textarea>
            <br>
            <label for="exampleFormControlFile1">Imagem:</label>
            <input type="file" name="file" class="dropify" data-default-file>
            <br>
            <button type="submit" class="btn btn-success btn-block">Cadastrar</button>
        </form>
    </div>
</div>