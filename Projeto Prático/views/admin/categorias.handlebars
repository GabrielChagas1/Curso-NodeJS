<h2 class="text-center mt-4">Lista de categorias:</h2>
<a href="/admin/categorias/add"><button class="btn btn-primary">Nova Categoria</button></a>
<hr>

{{#if categorias }}
    <div class="row mb-5">
        {{#each categorias}}
            <div class="col-md-4">
                <div class="card mt-4 shadow-sm">
                    <img src="/img/card.jpg" alt="Card Imagem" class="card-img">
                    <div class="card-body">
                        <h2>{{nome}}</h2>
                        <br>
                        <h6 class="card-subtitle mb-2 text-muted">Slug: {{slug}}</h6>
                        <br>
                        <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-primary">Editar Categoria</button></a>
                        <form action="/admin/categorias/deletar" method="POST">
                            <input type="hidden" name="id" value="{{_id}}">
                            <button class="btn btn-danger mt-2" type="submit">Deletar Categoria</button>
                        </form>
                    </div>
                    <div class="card-footer float-right text-muted d-flex justify-content-between bg-transparent border-top-0">
                        <div class="views"><i class="fa fa-calendar"></i> {{#formatDate date}}{{/formatDate}}</div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    {{else}}
        <div><h4 class="mt-3 text-center">Nenhuma categoria resgistrada</h4></div>

{{/if}}