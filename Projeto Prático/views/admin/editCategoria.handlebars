{{#each erros}}
    <div class="alert alert-danger mt-4">{{texto}}</div>
    {{else}}
{{/each}}
<div class="card mt-4 shadow">
    <div class="card-header">
        <h2 class="text-center">Editar Categoria - {{categoria.nome}}</h2>
    </div>
    <div class="card-body">
        <form action="/admin/categoria/edit" method="POST">
            <label for="nome">Nome: </label>
                    <input class="form-control" type="" id="nome" name="nome" placeholder="Nome da categoria" value="{{categoria.nome}}">
            <label for="slug">Slug: </label>
            <input class="form-control" type="text" id="slug" name="slug" placeholder="Slug da categoria" value="{{categoria.slug}}">
            <br>
            <input type="hidden" name="id" value="{{categoria._id}}">
            <button type="submit" class="btn btn-primary btn-block">Editar</button>
        </form>
    </div>
</div>