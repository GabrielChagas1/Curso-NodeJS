{{#each erros}}
    <div class="alert alert-danger mt-4">{{texto}}</div>
    {{else}}
{{/each}}

<div class="card shadow mt-5">
    <div class="card-body">
        <h3 class="text-center">Registre-se</h3>
        <form action="" method="post">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" class="form-control" required>
            <label for="email">Email: </label>
            <input type="text" name="email" class="form-control">
            <label for="senha">Senha: </label>
            <input type="password" name="senha" class="form-control">
            <label for="senha">Repista a sua senha: </label>
            <input type="password" name="senha-2" class="form-control">
            <button type="submit" class="btn btn-success btn-block mt-4">Criar Conta</button>
        </form>
    </div>
</div>